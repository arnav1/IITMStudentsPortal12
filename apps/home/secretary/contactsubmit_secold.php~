					);
	echo "Sent"
	if($con_sent) 
		$con_sent = '1';
	else 
		$con_sent = '0';
		
	// log it into database	
	$sql = "INSERT INTO stu_sec_contact (username, nick, contact, email, secretary_name, secretary_roll, secretary_email, subject, description, time_sent, sent_success) VALUES ('$con_roll', '$con_nick', '$con_contact', '$con_email', '$con_sec_name', '$con_sec_roll', '$con_sec_email', '$con_subj', '$con_desc', '$con_time', $con_sent);";
	mysql_query($sql) or die(mysql_error($con));
		
	if( $con_sent == '0' )	// die if error.
		die( "ERROR : we could not send the email. Please check if your information was correct. If problem persists please contact WebOps team (IITM)." );
	
